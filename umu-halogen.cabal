build-type:          Simple
extra-source-files:    CHANGELOG.md
                     , templates/Makefile
                     , templates/*.html
                     , templates/*.js
                     , templates/*.json
                     , templates/*.dhall
                     , templates/*.purs

library
  exposed-modules:     UmuHalogen
  other-modules:       Import
                     , UmuHalogen.Util
                     , UmuHalogen.Templates
                     , UmuHalogen.TH
                     , UmuHalogen.Log
                     , UmuHalogen.Capability.Command
                     , UmuHalogen.Capability.LogMessage
                     , UmuHalogen.Parser.Command
                     , Paths_umu_halogen
  build-depends:       base >=4.12 && <4.14
                     , classy-prelude
                     , transformers
                     , mtl
                     , text
                     , bytestring
                     , optparse-applicative
                     , ansi-terminal
                     , file-embed
                     , template-haskell
                     , turtle
                     , microlens
                     , filepath
  hs-source-dirs:      src
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude
                     , OverloadedStrings
  ghc-options:
    -Wall
    -j6


executable umu-halogen
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       base >=4.12 && <4.14
                     , umu-halogen
                     , classy-prelude
  hs-source-dirs:      app
  default-language:    Haskell2010
  default-extensions:  NoImplicitPrelude
  ghc-options:
    -Wall
    -threaded
    -rtsopts
    -with-rtsopts=-N
    -j6
